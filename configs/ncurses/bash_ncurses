NCURSES_HOME="$HOME/local/ncurses"

export PATH=$NCURSES_HOME/bin:$PATH
export LD_LIBRARY_PATH=$NCURSES_HOME/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=$NCURSES_HOME/lib:$LIBRARY_PATH
export C_INCLUDE_PATH=$NCURSES_HOME/include:$C_INCLUDE_PATH
export CPLUS_INCLUDE_PATH=$NCURSES_HOME/include:$CPLUS_INCLUDE_PATH
